<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchMode="columnWidth"
    android:columnCount="2"
    android:rowCount="5"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    >

    <TextView
        android:id="@+id/comp_value_monitor_display_name"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="start|top|fill"
        android:textStyle="bold"
        tools:text="Temperature" />

    <TextView
        android:id="@+id/comp_value_monitor_name"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="end|top"
        tools:text="S1 TEMP 01A76534" />

    <TextView
        android:id="@+id/comp_value_monitor_value_actual"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_gravity="center|center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="8dp"
        tools:text="20,15°C" />

    <TextView
        android:id="@+id/comp_value_monitor_text"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_gravity="start|bottom"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:visibility="gone"
        tools:text="Min: 21.0 °C, Max: 25.6 °C" />

    <View
        android:background="@color/textDarkSecondary"
        android:layout_marginTop="3dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="start|bottom|end"
        android:layout_row="3"
        />

</GridLayout>